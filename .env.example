# Environment Configuration Template for EduChain Scholar Hub
# Copy this to .env and fill in your values

# ==================== BLOCKCHAIN CONFIGURATION ====================

# Network selection: localhost, sepolia, polygon, mumbai, mainnet
NETWORK=sepolia

# RPC Provider URL (get from Infura, Alchemy, or use local node)
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Chain ID (sepolia=11155111, mainnet=1, mumbai=80001, polygon=137)
CHAIN_ID=11155111

# ==================== WALLET CONFIGURATION ====================

# IMPORTANT: Keep these private keys SECURE!
# Use separate wallets for deployer and oracle
# Never commit this file to version control

# Deployer wallet (deploys contract, creates scholarships)
# Generate with: python -c "from eth_account import Account; a = Account.create(); print(f'Address: {a.address}\nPrivateKey: {a.key.hex()}')"
DEPLOYER_PRIVATE_KEY=your_deployer_wallet_private_key_here

# Oracle wallet (verifies students, updates blockchain)
ORACLE_PRIVATE_KEY=your_oracle_wallet_private_key_here

# Owner address (for multi-sig setups)
OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# ==================== CONTRACT DEPLOYMENT ====================

# Smart contract address (fill after deployment)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Contract ABI file path
CONTRACT_ABI_PATH=./contracts/ScholarshipHub.json

# ==================== DATABASE CONFIGURATION ====================

# SQLite (local development)
DATABASE_URL=sqlite:///scholarship_hub.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/educhain

# ==================== API SERVER ====================

# Flask/FastAPI configuration
FLASK_ENV=development
FLASK_PORT=5000
API_HOST=0.0.0.0
API_DEBUG=True

# Frontend origin (for CORS)
FRONTEND_URL=http://localhost:8080

# ==================== ORACLE CONFIGURATION ====================

# Eligibility verification thresholds
MIN_GPA=3.0
MAX_ANNUAL_INCOME=50000

# Database for student data
STUDENT_DB_PATH=./student_data.db

# ==================== SECURITY ====================

# API Secret Key (for JWT tokens)
SECRET_KEY=your_secret_key_here_change_in_production

# CORS enabled origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ==================== LOGGING ====================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/educhain.log

# ==================== TESTING ====================

# Use testnet for development
USE_TESTNET=true

# Enable contract calls (disable for dry-run testing)
ENABLE_BLOCKCHAIN_CALLS=true

# ==================== DEVELOPMENT ====================

# Show detailed error messages
VERBOSE_ERRORS=true

# Enable contract verification on Etherscan
VERIFY_CONTRACT=true

# Etherscan API key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
